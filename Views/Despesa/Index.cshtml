@model IEnumerable<Gastos.Models.Despesa>

@{

      ViewData["Title"] = "Listagem de despesa";

}

<h2>Despesa</h2>

<p><a asp-action = "Criar">Novo registro de despesa</a></p>



<table class = "table">

        <thead>

              <tr>

                  <th>

                        @Html.DisplayNameFor(model  => model.Codigo)

                  </th>

                  <th>

                        @Html.DisplayNameFor(model  => model.Descricao)

                  </th>

                  <th>

                        @Html.DisplayNameFor(model  => model.Valor)

                  </th>

                    <th>

                        @Html.DisplayNameFor(model  => model.Desconto)

                  </th>

                  <th>

                        @Html.DisplayNameFor(model  => model.CodigoPessoa)

                  </th>

                   <th>

                        @Html.DisplayNameFor(model  => model.Data)

                  </th>

                  

                  

                  <th></th>

            </tr>

            

        </thead>

        <tbody>

              @foreach (var item in Model)
              {
                
                        <tr>

                                    <td>

                                           @Html.DisplayFor(model  => item.Codigo)

                               

                                    </td>

                                    <td>

                                          @Html.DisplayFor(model  => item.Descricao)   

                                    </td>

                                    <td>

                                          @Html.DisplayFor(model  => item.Valor)


                                    </td>

                                      <td>

                                          @Html.DisplayFor(model  => item.Desconto)


                                    </td>

                                      <td>

                                          @Html.DisplayFor(model  => item.CodigoPessoa)


                                    </td>

                                    <td>

                                          @Html.DisplayFor(model  => item.Data)


                                    </td>

                         

                                    <td>

                                           
                                          <a asp-action = "Editar" asp-route-Codigo= "@item.Codigo" >Editar</a> |
                                          <a asp-action = "Detalhes" asp-route-Codigo = "@item.Codigo">Detalhes</a> |
                                          <a asp-action = "Deletar" asp-route-Codigo = "@item.Codigo">Deletar</a> 
                                    
                                    </td>

                        </tr>


              }

        </tbody>

</table>

  

  