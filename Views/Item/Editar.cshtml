@model Gastos.Models.Item

@{

    ViewData["Title"] = "Editar um registro de ítem";

}

<h1>Editar registro de ítem</h1>

<br/>

<div class = "row">

      <div class = "row-md-4">

          <form asp-action = "editar">

              <div class = "form--group">

                      <label asp-for = "Codigo" class = "control-label"></label>

                       <input asp-for = "Codigo" class = "form-control"/>

                       <br>

              </div>

              <div class = "form--group">

                    <label asp-for = "CodigoCatalogo" class = "control-label"></label>

                     <select asp-for = "CodigoCatalogo"  class = "form-control"> 
                              
                                <option >Selecione</option>

                                @foreach (var item in ViewBag.Catalogos)
                                {

                                            @if (@item.Codigo == ViewBag.CodigoCatalogo)
                                            {

                                                <option selected > @item.Codigo </option>

                                                 continue;

                                            }

                                                            <option  >@item.Codigo </option>
                                                            

                                
                                }

                       </select>


                       <br/>  

              </div>

              <div class = "form--group">

                    <label asp-for = "CodigoDespesa" class = "control-label"></label>

                     <select asp-for = "CodigoDespesa"  class = "form-control"> 
                              
                                <option >Selecione</option>

                                @foreach (var item in ViewBag.Despesas)
                                {

                                            @if (@item.Codigo == ViewBag.CodigoDespesa)
                                            {

                                                <option selected > @item.Codigo </option>

                                                 continue;

                                            }

                                                            <option  >@item.Codigo </option>
                                                            

                                
                                }

                       </select>


                       <br/>  

              </div>

                 <div class = "form--group">

                      <label asp-for = "Quantidade" class = "control-label"></label>

                       <input type = "number" step = "0.01" placeholder="0.00" asp-for = "Quantidade" class = "form-control"/>

                        <br/>                  

                </div>

                 <div class = "form--group">

                      <label asp-for = "Total" class = "control-label"></label>

                       <input type = "number" step = "0.01" placeholder="0.00" asp-for = "Total" class = "form-control"/>

                        <br/>   

                                     

                </div>


               <div class = "form-group">

                      <input type = "submit"  value = "Editar" class = "btn  btn-primary"/>

              </div>

            </form>     


</div>

</hr>
<br>

<div>

    <a asp-action = "Index" >Voltar </a>

</div>


