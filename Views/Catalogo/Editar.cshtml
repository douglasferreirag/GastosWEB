@model Gastos.Models.Catalogo

@{

    ViewData["Title"] = "Editar um registro de catálogo";

}

<h1>Editar registro de catálogo</h1>

<br/>

<div class = "row">

      <div class = "row-md-4">

          <form asp-action = "editar">

              <div class = "form--group">

                      <label asp-for = "Codigo" class = "control-label"></label>

                       <input asp-for = "Codigo" class = "form-control"/>

                       <br>

              </div>

                <div class = "form--group">

                      <label asp-for = "Descricao" class = "control-label"></label>

                       <input asp-for = "Descricao" class = "form-control"/>

                       <br>

              </div>

                 <div class = "form--group">

                      <label asp-for = "ValorUnitario" class = "control-label"></label>

                       <input type = "number" step = "0.01" placeholder="0.00" asp-for = "ValorUnitario" class = "form-control"/>

                        <br/>                  

                </div>


              <div class = "form--group">

                    <label asp-for = "CodigoFornecedor" class = "control-label"></label>

                     <select asp-for = "CodigoFornecedor"  class = "form-control"> 
                              
                                <option >Selecione</option>

                                @foreach (var item in ViewBag.fornecedor)
                                {

                                            @if (@item.Codigo == ViewBag.CodigoFornecedor)
                                            {

                                                <option selected > @item.Codigo </option>

                                            }

                                                            <option  >@item.Codigo </option>
                                                            

                                
                                }

                       </select>


                       <br/>  

              </div>

                <div class = "form--group" required>

                      <label asp-for = "Data" class = "control-label"></label>

                       <input asp-for = "Data" class = "form-control" type = "Date/>

                       <br/>  

              </div>

              <br>

              <div class = "form-group">

                      <input type = "submit"  value = "Editar" class = "btn  btn-primary"/>

              </div>

          </form>

      </div>


</div>

</hr>
<br>

<div>

    <a asp-action = "Index" >Voltar </a>

</div>


