@model Gastos.Models.Pessoa

@{

    ViewData["Title"] = "Deletar um registro de pessoa";

}

<h1>Deletar registro de pessoa</h1>

<br/>

<div class = "row">

      <div class = "row-md-4">

          <form asp-action = "deletar">

              <div class = "form--group">

                      <label asp-for = "Codigo" class = "control-label"></label>

                       <input asp-for = "Codigo" class = "form-control"/>

              </div>

                <div class = "form--group">

                      <label asp-for = "Nome" class = "control-label"></label>

                       <input asp-for = "Nome" class = "form-control"/>

              </div>

                <div class = "form--group">

                      <label asp-for = "Sobrenome" class = "control-label"></label>

                       <input asp-for = "Sobrenome" class = "form-control"/>

              </div>

              <br>

              <div class = "form-group">

                      <input type = "submit"  value = "Deletar" class = "btn  btn-primary"/>

              </div>

          </form>

      </div>


</div>

</hr>
